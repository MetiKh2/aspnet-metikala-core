                                <a href="single.html"><img src="/products/ThumbImages/@item.Image" alt=" " class="img-responsive"></a>
                                <p>@item.ProductTitle</p>
                                <h4>@item.Price.ToString("n0") تومان<span>$5.00</span></h4>
                            </div>
                            <div class="snipcart-details">
                                <button class="btn btn-danger my-cart-btn hvr-sweep-to-left" data-id="5" data-name="Knorr instant soup" data-summary="summary 5" data-price="3.00" data-quantity="1" data-image="~/SiteTemplate/images/5.png">افزودن به سبد</button>
