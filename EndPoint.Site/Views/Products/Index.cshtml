@model Tuple<List<MetiKala.Domain.Entities.Products.Product>,int>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="w3l_banner_nav_left_banner3">
    <h3>متن به عنوان نمونه<span class="blink_me"></span></h3>
</div>
<div class="w3ls_w3l_banner_nav_left_grid">
    <h3>متن نمونه </h3>
    <div class="w3ls_w3l_banner_nav_left_grid1">
        <h6>نمونه</h6>
        
       @foreach (var item in Model.Item1.Take(4))
