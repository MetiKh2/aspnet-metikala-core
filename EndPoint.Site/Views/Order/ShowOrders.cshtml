@model List<MetiKala.Domain.Entities.Order.Order>
@using MetiKala
@{
    ViewData["Title"] = "سفارشات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="alert alert-success" style="margin-top:90px">
    <h2 class="text-danger">سفارشات</h2>
    <div class="bs-docs-example">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>مجموع مبلغ<h>
                    <th>تاریخ پرداخت<h>
                    <th>وضعیت</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.OrderID</td>
                        <td>@item.SumAmount.ToString("n0")</td>
                        <td>@item.CreateDate.ToShamsi()</td>
                        <td>@item.OrderState</td>
                        <td colspan="2"><a class="btn btn-outline-primary" href="/OrderDetails/@item.OrderID">جزییات</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>